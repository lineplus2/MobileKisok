<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_blue"
    android:fontFamily="@font/malgunbd"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:src="@drawable/logo2"
        android:text="이미지 대체예정" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30dp"

        android:theme="@style/TextInputLayoutTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.3"
        android:text="ID/PW"
        android:layout_marginBottom="5px"
        android:textSize="20dp"
        android:theme="@style/TextInputLayoutTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="Email@google.com"
            android:theme="@style/TextInputLayoutTheme"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="이메일확인"
            android:background="@drawable/sign_button"
            android:textColor="#ffffff" />
    </LinearLayout>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.5"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:theme="@style/TextInputLayoutTheme"/>

    <EditText
        android:id="@+id/passwordCheckEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:theme="@style/TextInputLayoutTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.3"
        android:text="이름"
        android:layout_marginBottom="5px"
        android:textSize="20dp"
        android:theme="@style/TextInputLayoutTheme"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:hint="이름"
        android:theme="@style/TextInputLayoutTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.3"
        android:text="휴대전화"
        android:layout_marginBottom="5px"
        android:textSize="20dp"
        android:theme="@style/TextInputLayoutTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:hint=" - 없이 입력하세요"
            android:theme="@style/TextInputLayoutTheme"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="인증번호발송"
            android:background="@drawable/sign_button"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:inputType="number"
        android:hint="인증번호"
        android:theme="@style/TextInputLayoutTheme"/>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:text="Signup"
        android:textStyle="bold"
        android:background="@drawable/rounded_button_background"
        android:textColor="@color/materialLightBlue700"/>
</LinearLayout>