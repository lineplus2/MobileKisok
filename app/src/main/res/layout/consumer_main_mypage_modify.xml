<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fontFamily="@font/malgunbd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 변경"
        android:textSize="30dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/profileImageModify"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/image_plus"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/exPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기존 비밀번호"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="변경할 비밀번호"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/changePasswordCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        />
   

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:id="@+id/modify"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_background_blue"
        android:text="수정하기 "
        android:textColor="@color/white"
        />

</LinearLayout>