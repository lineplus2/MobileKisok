<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/malgunbd"
    android:orientation="vertical"
    tools:context=".SignUpActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="매장 등록"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.3"
        android:text="로고"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:gravity="center"
        android:src="@drawable/image_plus"
        android:background="@drawable/edittextboxblue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.3"
        android:text="상호명"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="상호명"
            android:background="@drawable/edittextboxblue"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.3"
        android:text="매장소개"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="5줄까지 작성 가능합니다."
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="@drawable/edittextboxblue"
        android:maxLines="5"
        android:lines="3"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.3"
        android:text="전화번호"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:hint=""
        android:background="@drawable/edittextboxblue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.3"
        android:text="매장 위치"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5px"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint=" - 없이 입력하세요"
            android:inputType="number"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="우편번호 찾기"
            android:background="@color/materialBlue300"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:hint="상세주소"
        android:inputType="number"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5"
        android:text="가입하기"
        android:textColor="#ffffff"
        android:background="@color/materialBlue300"
        android:textStyle="bold" />
</LinearLayout>